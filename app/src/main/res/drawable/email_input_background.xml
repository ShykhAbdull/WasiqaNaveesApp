<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40CACACA" /> <!-- Shadow color -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Adjust shadow offsets -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:bottom="1dp"
        android:top="0dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background color -->
            <stroke android:width="2dp" android:color="#1A2F2E2E" /> <!-- Border -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
