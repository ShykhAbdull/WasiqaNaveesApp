<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/background_gradient"
        >


        <ImageView
            android:id="@+id/signup_wasiqa_logo"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:src="@drawable/letter_w_logo"
            android:layout_marginVertical="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!-- Title -->
        <TextView
            android:id="@+id/signup_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:layout_marginTop="0.6in"
            android:fontFamily="@font/sf_pro_display_medium"
            app:layout_constraintTop_toBottomOf="@id/signup_wasiqa_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <!-- Title -->
        <TextView
            android:id="@+id/signup_page_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create new account to explore!"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sf_pro_display_regular"
            app:layout_constraintTop_toBottomOf="@id/signup_page_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_emailInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/email_input_background"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_marginTop="50dp"
            app:boxBackgroundMode="none"
            app:boxBackgroundColor="@android:color/white"
            app:startIconDrawable="@drawable/email"
            app:startIconTint="#2E3192   "
            app:boxStrokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/signup_page_sub_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginVertical="0dp"
                android:textSize="16dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:inputType="textEmailAddress"
                android:paddingLeft="70dp"
                android:textColor="@color/black"
                android:textColorHint="#A9A9A9"
                style="@style/NoUnderlineEditText"
                />


        </com.google.android.material.textfield.TextInputLayout>



        <!-- Password  Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_passwordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/email_input_background"
            android:padding="5dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_marginTop="15dp"
            app:boxBackgroundMode="none"
            app:boxBackgroundColor="@android:color/white"
            app:startIconDrawable="@drawable/password"
            app:startIconTint="#2E3192"
            app:boxStrokeWidth="0dp"
            app:endIconMode="password_toggle"
            app:endIconDrawable="@drawable/eye_close"
            app:endIconTint="#2E3192"
            app:layout_constraintTop_toBottomOf="@id/signup_emailInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="16dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:inputType="textPassword"
                android:paddingLeft="70dp"
                android:textColor="@color/black"
                android:textColorHint="#A9A9A9"
                style="@style/NoUnderlineEditText"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password  Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_cnfirmpasswordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/email_input_background"
            android:padding="5dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_marginTop="15dp"
            app:boxBackgroundMode="none"
            app:boxBackgroundColor="@android:color/white"
            app:startIconDrawable="@drawable/password"
            app:startIconTint="#2E3192"
            app:boxStrokeWidth="0dp"
            app:endIconMode="password_toggle"
            app:endIconDrawable="@drawable/eye_close"
            app:endIconTint="#2E3192"
            app:layout_constraintTop_toBottomOf="@id/signup_passwordInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_cnfrmpasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textSize="16dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:inputType="textPassword"
                android:paddingLeft="70dp"
                android:textColor="@color/black"
                android:textColorHint="#A9A9A9"
                style="@style/NoUnderlineEditText"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Login Button -->
        <Button
            android:id="@+id/signupButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:fontFamily="@font/sf_pro_display_regular"
            android:background="@drawable/rounded_btn"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/signup_cnfirmpasswordInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <TextView
            android:id="@+id/already_have_an_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/sf_pro_display_medium"
            app:layout_constraintTop_toBottomOf="@id/signupButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <LinearLayout
            android:id="@+id/or_continue_with_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/already_have_an_account"
            app:layout_constraintEnd_toEndOf="@id/already_have_an_account"
            app:layout_constraintTop_toBottomOf="@id/already_have_an_account"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:fontFamily="@font/sf_pro_display_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" continue with"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:fontFamily="@font/sf_pro_display_regular" />
        </LinearLayout>


        <!-- Sign in with Google Button -->
        <ImageButton
            android:id="@+id/googleSignInButton_signup"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/google_title"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/or_continue_with_text"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
