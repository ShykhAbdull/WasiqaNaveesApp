<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Icon at the top -->
    <ImageView
        android:id="@+id/iconImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="25dp"
        android:src="@drawable/pencil_edit"
        android:tint="#FFC107"
        android:layout_gravity="center" />

    <!-- Centered Title -->
    <TextView
        android:id="@+id/centeredTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="District ''Selected District''"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="center" />

    <!-- EditText for input -->
    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter new district name"
        android:inputType="text"
        android:padding="10dp"
        android:background="@drawable/email_input_background"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Alert message below the EditText -->
    <TextView
        android:id="@+id/editMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:layout_gravity="center"
        android:text="Edit the name of the selected district"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="16sp" />

</LinearLayout>
