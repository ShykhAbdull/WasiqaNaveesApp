<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--        1st Display -->
        <TextView
            android:id="@+id/district_text_pg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="District"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/district_display_pg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Lahore"
            android:textColorHint="@color/black"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginStart="140dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_display_regular"
            app:layout_constraintTop_toTopOf="@id/district_text_pg2"
            app:layout_constraintBottom_toBottomOf="@id/district_text_pg2"
            app:layout_constraintStart_toStartOf="parent"

            />

        <!--        2nd Display -->
        <TextView
            android:id="@+id/town_text_pg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Town"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/district_display_pg2"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/town_display_pg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Allama Iqbal Town"
            android:textColorHint="@color/black"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginStart="140dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_display_regular"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="@id/town_text_pg2"
            app:layout_constraintBottom_toBottomOf="@id/town_text_pg2"
            app:layout_constraintStart_toStartOf="parent"
            />


        <!--        3rd  Display -->
        <TextView
            android:id="@+id/landType_text_pg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Land Classification"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/propertyArea_display_pg2"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/landType_display_pg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Commercial Plot"
            android:textColorHint="@color/black"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginStart="140dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_display_regular"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/landType_text_pg2"
            app:layout_constraintBottom_toBottomOf="@id/landType_text_pg2"
            />
        <!--4th Display -->

        <!--        5th  Display -->

        <TextView
            android:id="@+id/propertyArea_text_pg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Area"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/town_display_pg2"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/propertyArea_display_pg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Bahria Town Lhr"
            android:textColorHint="@color/black"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginStart="140dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_display_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/propertyArea_text_pg2"
            app:layout_constraintBottom_toBottomOf="@id/propertyArea_text_pg2"
            />



        <!-- Khasra Number Section -->
        <TextView
            android:id="@+id/khasra_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khasra Number"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/khasraEditText"
            app:layout_constraintBottom_toBottomOf="@id/khasraEditText"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:id="@+id/khasraEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="(Optional)"
            android:background="@drawable/email_input_background"
            android:fontFamily="@font/sf_pro_display_medium"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="10dp"
            android:textSize="10dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/landType_display_pg2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!-- CardView Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/khasraEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"

                >

                <!-- Title -->
                <TextView
                    android:id="@+id/property_rate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property Rate"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:textColor="#000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingBottom="8dp" />

                <!-- Table Layout -->
                <TableLayout
                    android:id="@+id/tableLayoutSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/property_rate_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Table Header -->
                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Plot"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:textColor="#000" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="DC"
                            android:textSize="18sp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:textColor="#000"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="FBR"
                            android:textSize="18sp"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:textColor="#000"
                            android:gravity="center"

                            />
                    </TableRow>

                    <!-- Table Rows -->
                    <TableRow
                        android:layout_marginVertical="5dp"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Marla / Price"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:textColor="#000" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="100000"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:paddingVertical="8dp"
                            android:background="@drawable/email_input_background"
                            android:gravity="center"
                            android:fontFamily="@font/sf_pro_display_medium" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="150000"
                            android:textSize="15sp"
                            android:inputType="numberDecimal"
                            android:paddingVertical="8dp"
                            android:background="@drawable/email_input_background"
                            android:gravity="center"
                            android:fontFamily="@font/sf_pro_display_regular" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/coveredAreaRow_pg2"
                        android:visibility="visible"

                        android:layout_marginVertical="5dp"

                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Covered Area (Sqft)"
                            android:textSize="15sp"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:gravity="center"
                            android:paddingVertical="5dp"

                            android:textColor="#000" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="100000"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:paddingVertical="8dp"
                            android:layout_gravity="center"
                            android:background="@drawable/email_input_background"
                            android:gravity="center"
                            android:fontFamily="@font/sf_pro_display_medium" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="100000"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:paddingVertical="8dp"
                            android:background="@drawable/email_input_background"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/sf_pro_display_medium" />
                    </TableRow>


                    <!-- Additional rows here as needed -->
                </TableLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
