<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >

    <ImageButton
        android:id="@+id/nav_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8sp"
        />

    <ImageView
        android:id="@+id/nav_wasiqa_logo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/letter_w_logo"
        />

    <TextView
        android:id="@+id/nav_settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:visibility="gone"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@color/wasiqa_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="24sp"
        android:visibility="gone"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@color/wasiqa_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <ImageButton
        android:id="@+id/nav_settings_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/settings"
        android:layout_marginEnd="15dp"
        android:contentDescription="TODO"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    <!-- Month and Day -->
    <TextView
        android:id="@+id/date_month_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nov 22"
        android:textColor="#00008B"
        android:textSize="16sp"
        android:fontFamily="@font/sf_pro_display_medium"

        />

    <!-- Year -->
    <TextView
        android:id="@+id/date_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024"
        android:textColor="#00008B"
        android:textSize="16sp"
        android:fontFamily="@font/sf_pro_display_medium"
        />
    </LinearLayout>



    <!--    Edit Button -->
    <Button
        android:id="@+id/profile_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_btn"
        android:gravity="center"
        android:text="Profile"
        android:visibility="gone"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="5dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toTopOf="@id/nav_settings_text"
        app:layout_constraintBottom_toBottomOf="@id/nav_settings_text"
        app:layout_constraintEnd_toEndOf="parent"

        />










</androidx.constraintlayout.widget.ConstraintLayout>